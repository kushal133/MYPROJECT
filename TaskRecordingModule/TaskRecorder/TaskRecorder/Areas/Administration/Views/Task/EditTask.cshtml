@model TaskRecorder_DataModels.Models.TasksModel
@{
    ViewData["Title"] = "EditTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-action="EditTask" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskId"></label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="TaskId" />
                        <input asp-for="TaskId" class="form-control" />
                    </div>
                    <span asp-validation-for="TaskId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UploadedDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UploadedDate" class="form-control" />
                    </div>
                    <span asp-validation-for="UploadedDate" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AssignedTo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AssignedTo" class="form-control" />
                    </div>
                    <span asp-validation-for="AssignedTo" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DeadLine"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DeadLine" class="form-control" />
                    </div>
                    <span asp-validation-for="DeadLine" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Status" class="form-control" />
                    </div>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="IsConfirmed"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="IsConfirmed" class="" type="checkbox" />
                    </div>
                    <span asp-validation-for="IsConfirmed" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UserId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="UserId" class="form-control" />
                    </div>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update" />
                </div>
            </div>
        </div>
    </form>
</div>

