@model TaskRecorder_DataModels.Models.TasksModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info"> Details</h2>

<form asp-action="" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TaskId"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="TaskId" />
                    <input asp-for="TaskId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Title" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Description" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UploadedDate"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UploadedDate" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="UploadedDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="AssignedTo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AssignedTo" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="AssignedTo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DeadLine"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DeadLine" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UserId" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Status"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Status" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsConfirmed"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsConfirmed" disabled="disabled" class="" type="checkbox" />
                </div>
                <span asp-validation-for="IsConfirmed" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

