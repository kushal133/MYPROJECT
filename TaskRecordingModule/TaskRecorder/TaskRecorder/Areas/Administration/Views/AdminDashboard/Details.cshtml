@model TaskRecorder_DataModels.Models.Users
    @{
        ViewData["Title"] = "Details";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2 class="text-info">Users Detail</h2>
    <form asp-action="" method="post" id="user-form" enctype="multipart/form-data">
        <div class="p-4 rounded border">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <h3>@ViewBag.message</h3>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="FirstName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-5">
                    <input asp-for="LastName" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" class="form-control" readonly="readonly" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        </div>
    </form>
