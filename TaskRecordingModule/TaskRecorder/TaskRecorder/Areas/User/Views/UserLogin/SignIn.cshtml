@model TaskRecorder.Areas.User.Models.ViewModels.LoginViewModel
    @{
        Layout = null;
        var returnUrl = Context.Request.Query["returnurl"];
    }

    <div class="container" style="padding-left:680px;padding-top:220px">
        <section id="form">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-sm-offset-1">
                        <div class="login-form">
                            <h2>Login to your account</h2>
                            <form asp-area="User" asp-controller="UserLogin" asp-action="SignIn" method="post" asp-route-returnUrl="@returnUrl">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                @ViewBag.Message
                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>
                        </div>
                        <br />
                        <div>
                            <a asp-area="Home" asp-controller="ForgotPassword"  asp-action="ForgotPassword" class="btn btn-primary">Forgot Password?</a>
                        </div>
                        <br />
                        <a asp-action="SignUp" asp-controller="UserLogin" asp-area="User" class="btn btn-primary pull-right">Register</a>
                    </div>
                </div>
            </div>
        </section>
        <a asp-area="Home" asp-controller="Home" asp-action="Index" class="btn btn-primary">Home PAge</a>
    </div>
